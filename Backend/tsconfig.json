{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],

    /* Strict Type-Checking Options */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Path Alias Configuration */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* Module Resolution Options */
    "moduleResolution": "node",

    /* Source Map Options */
    "sourceMap": true,

    /* Output Directory */
    "outDir": "./dist",
    "rootDir": ".",

    /* Advanced Options */
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}